            </ul>
        </div>
    </div>

    <script src="~/lib/layui/layui.js"></script>
    <script>
        layui.config({
            base: '/layuiadmin/'
        }).extend({
            index: 'lib/index' 
        }).use(['index', 'user'], function () {
            var $ = layui.$
                , setter = layui.setter
                , admin = layui.admin
                , form = layui.form
                , router = layui.router()
                , search = router.search;
            form.on('submit(login-button)', function (obj) {
                $('.form').fadeOut(500);
                $('.wrapper').addClass('form-success');
                $.ajax({
                    type: 'post',
                    url: '/User/CheckLogin',
                    data: obj.field,
                    dataType: 'json',
                    success: function (res) {
                        if (res.code == 200) {
                            layui.data(setter.tableName, {
                                key: setter.request.tokenName
                                , value: res.data.token
                            });
                            location.href = '/';
                        }
                        else {
                            alert(res.info);
                            $('.form').fadeIn(500);
                            $('.wrapper').removeClass('form-success');
                        }
                    },
                    error: function (e) {
                        alert("请联系管理员")
                        $('.form').fadeIn(500);
                        $('.wrapper').removeClass('form-success');
                    }
                });
            });
        });
    </script>
</body>
</html>